<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:paddingLeft="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_headPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic_facilitator"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="李大宝"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/iv_headPortrait"
        android:layout_alignLeft="@id/iv_headPortrait"
        android:layout_alignRight="@id/iv_headPortrait"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_headPortrait"
        android:layout_alignRight="@id/iv_headPortrait"
        android:layout_below="@id/tv_name"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#26c6da"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="@color/white"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="34dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv_headPortrait">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/kuaiColorText"
            android:textSize="16sp"
        android:text="专家简介:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingRight="25dp"
            android:text="男，1960年4月生，陕西省放多了就是卡减肥了,,空间的撒发多少了.解案发反倒是拉科技发的撒垃圾减肥的酸辣粉快来接发的撒李开复"
            />
    </LinearLayout>
</RelativeLayout>